<UserControl x:Class="CoverFlowSilverlight.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:telerik="clr-namespace:Telerik.Windows.Controls;assembly=Telerik.Windows.Controls.Navigation">
    <Grid x:Name="LayoutRoot" MinWidth="600" MinHeight="600">
        <telerik:RadCoverFlow x:Name="coverFlow" IsReflectionEnabled="True" ItemScale="0.4" CameraViewpoint="Center" RotationY="-180"
                              DistanceBetweenItems="150" DistanceFromSelectedItem="15" 
                              ReflectionHeight="0.2" ItemChangeDelay="00:00:0.8">
            <telerik:RadCoverFlow.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <Image Width="350" Height="350" Source="{Binding URL}" />
                    </StackPanel>
                </DataTemplate>
            </telerik:RadCoverFlow.ItemTemplate>
            <telerik:RadCoverFlow.EasingFunction>
                <ExponentialEase/>
            </telerik:RadCoverFlow.EasingFunction>
        </telerik:RadCoverFlow>
    </Grid>
</UserControl>
